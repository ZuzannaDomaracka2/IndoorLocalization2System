<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MapActivity">

    <ImageView
        android:id="@+id/img_map"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_debugM"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/txt_border"
        android:ems="10"
        android:text="DEBUG TEST WINDOW"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_1M"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_map" />

    <Button
        android:id="@+id/btn_1M"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:text="SETTINGS"
        app:layout_constraintBottom_toTopOf="@+id/btn_2M"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_2M"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"

        android:text="UPDATE\nMAP"
        app:layout_constraintBottom_toTopOf="@+id/btn_3M"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_3M"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:text="SENSOR\nMODE"
        app:layout_constraintBottom_toTopOf="@+id/btn_4M"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_4M"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:text="ALGORITHM\nMODE"
        app:layout_constraintBottom_toBottomOf="@+id/txt_debugM"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>